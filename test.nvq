# This is a test file demonstrating Noviq comment functionality
x = 5 # Initialize x

# Display welcome message
display("Hello, World!")

##
This is a multi-line comment
It will be ignored by the interpreter
##

y = "Sam" # Set name
display("Name: %var1", y) # Show name

a = 10.22
b = false
display("Noviq is running!")
display("Variable display: %var1 %var2 %var3 %var4",x,y,a,b)
display("%var1",a+x)
display("%var1",a*x)
display("%var1",a/x)
display("%var1",a%x)
mat = a**x
display("%var1",mat)
display("%var1",a//x)
v1 = 5 AND 0
v2 = 0 OR 1
v3 = NOT 5
display("%var1 %var2 %var3",v1,v2,v3)

v4 = 5 && 0
v5 = 0 || 1
v6 = !5
display("%var1 %var2 %var3",v4,v5,v6)

c1 = 5 > 3
c2 = 4 < 7
c3 = 5 >= 5
c4 = 6 <= 3
c5 = 4 == 4
display("%var1 %var2 %var3 %var4 %var5",c1,c2,c3,c4,c5)

# Testing if-else statements
x = 10
if(x > 5){
    display("x is greater than 5")
}else{
    display("x is less than or equal to 5")
}

# Testing if-elseif-else
score = 85
if(score >= 90){
    display("Grade: A")
}elseif(score >= 80){
    display("Grade: B")
}elseif(score >= 70){
    display("Grade: C")
}else{
    display("Grade: F")
}

# Testing nested conditions
a = 5
b = -3
if(a > 0){
    if(b > 0){
        display("Both a and b are positive")
    }elseif(b == 0){
        display("a is positive, b is zero")
    }else{
        display("Only a is positive")
    }
}elseif(a == 0){
    display("a is zero")
}else{
    display("a is negative")
}

# End of test file